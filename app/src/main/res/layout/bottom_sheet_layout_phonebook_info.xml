<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="1dp"
    android:gravity="center|top"
    android:orientation="horizontal"
    android:weightSum="2"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottomsheet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_photo_available_64"
            android:elevation="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottomsheet_name_and_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:elevation="6dp"
            android:fontFamily="casual"
            android:text="Name &amp; Last"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bottomsheet_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:fontFamily="casual"
            android:text="2014"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bottomsheet_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:fontFamily="casual"
            android:text="Action, Comedy, Sci-Fi"
            android:textSize="12sp" />



    </LinearLayout>


</LinearLayout>